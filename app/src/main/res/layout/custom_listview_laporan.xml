<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e6e4"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txtNomor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="1" />

        <TextView
            android:id="@+id/txtTargetKunjungan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="20" />

        <TextView
            android:id="@+id/txtTargetRekruitmen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="20" />

        <TextView
            android:id="@+id/txtRealisasiKunjungan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="10" />

        <TextView
            android:id="@+id/txtRealisasiRekrutmen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="10" />

        <TextView
            android:id="@+id/txtKunjungan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="50%" />

        <TextView
            android:id="@+id/txtRekruitmen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:text="50%" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>